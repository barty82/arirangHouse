<%= simple_form_for(@reservation, html:{class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, label: "성함" %>
  <%= f.input :title, label: "제목" %>
  <%= f.input :content, label: "자세한 내용", input_html:{rows: 6}%>

  <%= @reservation.published %>
  


  <div class="form-actions">
    <%= f.button :submit,  "예약하기" , class: "btn btn-primary" %>
  </div>
<% end %>
